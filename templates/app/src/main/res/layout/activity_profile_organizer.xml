<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
    >


        <include
            layout="@layout/app_bar_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp">

        <ImageView
            android:id="@+id/imgProfile2"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/mypic2"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center_horizontal"
            />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorone"
            android:id="@+id/mail2"
            android:fontFamily="@font/caviardreams"
            android:textSize="20dp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/caviardreams"
            android:textColor="@color/colorone"
            android:id="@+id/name2"
            android:textSize="20dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/caviardreams"
            android:textColor="@color/colorone"
            android:id="@+id/prenom2"
            android:textSize="20dp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/caviardreams"
            android:textColor="@color/colorone"
            android:id="@+id/adres2"
            android:textSize="20dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/caviardreams"
            android:textColor="@color/colorone"
            android:id="@+id/telorg2"
            android:textSize="20dp"
            />


        <Button
            android:id="@+id/save2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="save" />

        <Button
            android:id="@+id/logout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="logout" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgtext2"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/edit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="edit picture"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    </RelativeLayout>