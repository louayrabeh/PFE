<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:id="@+id/card2"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="right">

            <Button
                android:id="@+id/delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_clear_black_24dp"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >


            <ImageView
                android:id="@+id/imageVieww1"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:padding="4dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/textViewTitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_toRightOf="@id/imageVieww1"
                android:text="App"
                android:textAlignment="textStart"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/textViewShortDesc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle1"
                android:gravity="end"
                android:textAlignment="textStart"
                android:maxLines="2"
                android:maxLength="60"
                android:layout_toRightOf="@id/imageVieww1"
                android:text="13.3 Inch, 256 GB"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                tools:ignore="RtlCompat" />


            <TextView
                android:id="@+id/textViewlieu1"
                android:textAlignment="textStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewShortDesc1"
                android:layout_toRightOf="@id/imageVieww1"
                android:gravity="end"
                android:text="4.7"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/textViewheure1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewlieu1"
                android:textAlignment="textStart"
                android:gravity="end"
                android:layout_toRightOf="@id/imageVieww1"
                android:text="INR 56990"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="normal"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/categ1"
                android:gravity="start"
                android:layout_alignLeft="@+id/imageVieww1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_light"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:text="cat"/>



            <TextView
                android:id="@+id/datedebevent1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewlieu1"
                android:gravity="center_horizontal"
                android:text="4.7"
                android:visibility="invisible"
                android:textStyle="normal"
                android:layout_marginBottom="10dp"
                />


            <TextView
                android:id="@+id/datefinevent1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/datedebevent1"
                android:gravity="center_horizontal"
                android:text="4.7"
                android:textStyle="normal"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"/>



            <TextView
                android:id="@+id/typee1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/categ1"
                android:gravity="center_horizontal"
                android:text="4.7"
                android:textStyle="normal"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/lien1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:clickable="true"
                android:fontFamily="cursive"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:layout_below="@id/titrelien1"
                android:gravity="start"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/descorg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:layout_below="@id/aproposorg1"
                android:gravity="start"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/siteorg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:autoLink="all"
                android:clickable="true"
                android:maxLength="1000"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/valbudg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:maxLength="1000"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/idev1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:maxLength="1000"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/idorg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:maxLength="1000"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
