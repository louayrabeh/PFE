<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/profile_img"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        app:fontFamily="@font/caviardreams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_img"
        android:layout_marginLeft="5dp"
        android:padding="8dp"
        android:textColor="#fff"
        android:id="@+id/show_msg"
        android:text="Hello world !"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:background="@drawable/msg_left"/>
    <TextView
        app:fontFamily="@font/caviardreams_bolditalic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_img"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/msg_vu"
        android:text="Seen"!MMMMMM
        android:textSize="10sp"
        android:layout_below="@+id/show_msg"
        android:layout_toRightOf="@+id/profile_img" />

</RelativeLayout>